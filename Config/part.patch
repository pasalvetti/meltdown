@use "builtin:debug";
:parts {
// add Module_Thermal to all generators and resource converters
    .Module_Generator, .Module_ResourceConverter {
        +Module_Thermal {
            +Data_Thermal {}
        }
    }
// add the PAM header for command pods
    .Module_Command {
        PAMModuleVisualsOverride +: [
            {
                PartComponentModuleName: "PartComponentModule_Thermal",
                ModuleDisplayName: "PartModules/Thermal/Name",
                ShowHeader: true,
                ShowFooter: true
            }
        ];
    }
}

// add EC consumption to all command pods
:parts #pod_1v_conical_crew > Module_Command > Data_Command {
    requiredResources +: [
        {
            Rate: 20,
            ResourceName: "ElectricCharge",
            AcceptanceThreshold: 1.0
        }
    ];
}

:parts #pod_1v_conical_crew, #pod_1v_lander_crew {
    +Module_Thermal {
        +Data_Thermal {
            FluxGenerated: 10;
        }
    }
}

:parts #pod_2v_lander_crew, #pod_2v_conical_crew, #pod_2v_cupola_crew {
    +Module_Thermal {
        +Data_Thermal {
            FluxGenerated: 20;
        }
    }
}